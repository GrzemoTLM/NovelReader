<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.core.novelreader_client.LoginController"
      style="-fx-background-color: linear-gradient(to bottom, #667eea, #764ba2);">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>
    <VBox alignment="CENTER" spacing="5.0">
        <Text text="Novel Reader" style="-fx-font-size: 32px; -fx-fill: white;"/>
        <Label text="Zaloguj sie do swojego konta" style="-fx-text-fill: #e0e0e0;">
            <font><Font size="14.0"/></font>
        </Label>
    </VBox>
    <Region prefHeight="20.0"/>
    <VBox alignment="CENTER" spacing="15.0" 
          style="-fx-background-color: white; -fx-background-radius: 10;"
          maxWidth="350.0">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
        <VBox spacing="5.0" alignment="CENTER_LEFT">
            <Label text="Nazwa uzytkownika" style="-fx-text-fill: #333333; -fx-font-weight: bold;">
                <font><Font size="12.0"/></font>
            </Label>
            <TextField fx:id="usernameField" promptText="Wprowadz nazwe uzytkownika" prefHeight="40.0"/>
        </VBox>
        <VBox spacing="5.0" alignment="CENTER_LEFT">
            <Label text="Haslo" style="-fx-text-fill: #333333; -fx-font-weight: bold;">
                <font><Font size="12.0"/></font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Wprowadz haslo" prefHeight="40.0"/>
        </VBox>
        <Label fx:id="errorLabel" text="" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" wrapText="true" maxWidth="290.0"/>
        <ProgressIndicator fx:id="progressIndicator" prefWidth="30.0" prefHeight="30.0"/>
        <Button fx:id="loginButton" text="Zaloguj sie" onAction="#onLoginButtonClick"
                prefHeight="45.0" prefWidth="290.0"
                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
            <font><Font size="14.0"/></font>
        </Button>
        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Nie masz konta?" style="-fx-text-fill: #666666;">
                <font><Font size="12.0"/></font>
            </Label>
            <Hyperlink fx:id="registerLink" text="Zarejestruj sie" onAction="#onRegisterLinkClick" style="-fx-text-fill: #667eea;">
                <font><Font size="12.0"/></font>
            </Hyperlink>
        </HBox>
    </VBox>
</VBox>
